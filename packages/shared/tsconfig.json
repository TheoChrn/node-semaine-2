{
  "extends": "@total-typescript/tsconfig/bundler",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ESNext",
    "esModuleInterop": true
  },
  "include": ["src/*"],
  "exclude": ["dist", "node_modules"]
}
